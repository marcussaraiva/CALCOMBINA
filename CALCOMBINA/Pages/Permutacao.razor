@page "/permutacao"
@using Syncfusion.Blazor.Buttons
@using Utils = CALCOMBINA.Utils.Utils

<PageTitle>CalCombina - Permutação</PageTitle>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Entre com as variáveis solicitadas</h1>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-6 d-flex flex-column">
            <label class="mb-1">Elementos (n)</label>
            <SfNumericTextBox Placeholder="Entre com a variável n"
                        @bind-Value="@VariavelN"
            ></SfNumericTextBox>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <SfButton Content="Calcular" OnClick="args => CalcularPermutacaoSimples(VariavelN)"></SfButton>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>O resultado é: <span>@Resultado</span></label>
        </div>
    </div>
</div>

@code {
    private long VariavelN;
    private long Resultado;

    public void CalcularPermutacaoSimples(long variavelN)
    {
        //Calculando fatorial de n
        Resultado = Utils.CalcularFatorial(variavelN);
    }
}
